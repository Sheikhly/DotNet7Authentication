@model ScaffoldDotNet7.Models.UpdateMovieViewModel

<h1>Edit a Movie For Your WatchList</h1>

<form method="post" action="View" class="mt-5">

    <div class="form-group">
        <label for="">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>

    </div>

    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" asp-for="Name">

    </div>

    <div class="form-group">
        <label for="">YearOfBuild</label>
        <input type="number" class="form-control" asp-for="Year">

    </div>

    <div class="form-group">
        <label for="">Genre</label>
        <input type="text" class="form-control" asp-for="Genre">

    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="WatchList">Delete</button>



</form>




